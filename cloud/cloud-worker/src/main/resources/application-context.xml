  		<property name="locations" value=
  		    "classpath:worker_jdbc.properties,
  		     classpath:infrastructure.properties,
  		     classpath:EucaCredentials.properties"/>
	</bean> --> 
    
   <context:property-placeholder location="classpath:worker_jdbc.properties,classpath:infrastructure.properties,classpath:userPoolDatasource.properties"/>
    
    <context:component-scan base-package="org.openinfinity.cloud">
    	<context:exclude-filter type="regex" expression="org.openinfinity.cloud.service.healthmonitoring.*.*"/>
    </context:component-scan>
 
	<task:annotation-driven executor="executorWithPool" scheduler="taskScheduler"/>
	
	<task:executor id="executorWithPool" pool-size="5-99" queue-capacity="10"/>
	
	<task:scheduler id="taskScheduler" pool-size="1"/>
    
    <bean id="cloudDataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
        <property name="validationQuery" value="select 1" />
        <property name="maxActive" value="8"/>
        <property name="maxIdle" value="2"/>
    </bean>

    <bean id="portalUserDataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${userPool.jdbc.driverClassName}"/>
        <property name="url" value="${userPool.jdbc.url}"/>
        <property name="username" value="${userPool.jdbc.username}"/>
        <property name="password" value="${userPool.jdbc.password}}"/>
    </bean>

    <bean id="portalDsTxManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="portalUserDataSource" />
        <qualifier value="userPool"/>
    </bean>

