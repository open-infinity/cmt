<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
    <persistence-unit name="jpa.hibernate.mysql">
        <provider>org.hibernate.ejb.HibernatePersistence</provider> 	
        <class>org.openinfinity.cloud.domain.InstanceTbl</class>
        <class>org.openinfinity.cloud.domain.InstanceShare</class>
        <class>org.openinfinity.cloud.domain.InstanceShareDetail</class>
        <class>org.openinfinity.cloud.domain.InstanceShareInvoice</class>
        <class>org.openinfinity.cloud.domain.InstanceParameterTbl</class>
		<properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <!-- automatically updates schema, not to be used with production env
            value="validate" could be usefull but currently fails with schema validation errors 
            <property name="hibernate.hbm2ddl.auto" value="auto" />-->
            <property name="hibernate.connection.charSet" value="UTF-8" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
	</persistence-unit>
</persistence>
