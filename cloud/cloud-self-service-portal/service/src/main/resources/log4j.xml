<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="true">
	<!-- Appenders -->
	<appender name="log" class="org.apache.log4j.FileAppender">
		<param name="File" value="/opt/openinfinity/1.3.0/tomcat/logs/logging.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="audittrail" class="org.apache.log4j.FileAppender">
		<param name="File" value="/opt/openinfinity/1.3.0/tomcat/logs/audittrail.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="exception" class="org.apache.log4j.FileAppender">
		<param name="File" value="/opt/openinfinity/1.3.0/tomcat/logs/exception.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<!-- Core logger -->
	<logger name="ssp.core.aspect.ExceptionTranslatorAspect">
		<level value="error" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="ssp.core.aspect.AuditTrailAspect">
		<level value="info" />
		<appender-ref ref="audittrail" />
	</logger>
	<logger name="ssp.core.aspect.ArgumentBuilder">
		<level value="warn" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="ssp.core.aspect.LogAspect">
		<level value="debug" />
		<appender-ref ref="log" />
	</logger>
<!-- 	<logger name="org.springframework.test.context.junit4"> -->
<!-- 		<level value="debug" /> -->
<!-- 		<appender-ref ref="console" /> -->
<!-- 	</logger> -->
	<!-- 3rdparty Loggers -->
	<logger name="org.activiti">
		<level value="debug" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.springframework.beans">
		<level value="warn" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="org.springframework.jdbc">
		<level value="warn" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="org.springframework.transaction">
		<level value="warn" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="org.springframework.orm">
		<level value="warn" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="org.mule">
		<level value="info" />
		<appender-ref ref="console" />
	</logger>
	<root>
		<priority value="info" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>	