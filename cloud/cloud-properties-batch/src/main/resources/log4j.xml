<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="true">
	<!-- Appenders -->
	<appender name="log" class="org.apache.log4j.FileAppender">
		<param name="File" value="../logs/properties-batch-application.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="audittrail" class="org.apache.log4j.FileAppender">
		<param name="File" value="../logs/properties-batch-audittrail.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="exception" class="org.apache.log4j.FileAppender">
		<param name="File" value="../logs/properties-batch-exception.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<!-- Core logger -->
	<logger name="org.openinfinity.core.aspect.AuditTrailAspect">
		<level value="info" />
		<appender-ref ref="audittrail" />
	</logger>
	<logger name="org.openinfinity.core.aspect.ArgumentBuilder">
		<level value="warn" />
		<appender-ref ref="exception" />
	</logger>
	<logger name="org.openinfinity.core.aspect.LogAspect">
		<level value="debug" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.openinfinity.cloud">
		<level value="debug" />
		<appender-ref ref="log" />
	</logger>
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.beans">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.jdbc">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.transaction">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.orm">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.batch">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.core">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.context">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.beans">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<logger name="org.springframework.aop">
		<level value="error" />
		<appender-ref ref="log" />
	</logger>
	<!-- Root Logger -->
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>